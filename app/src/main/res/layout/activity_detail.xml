<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="0dp"
        android:orientation="vertical"
        android:background="@color/cardview_shadow_start_color">


        <ImageView
            android:id="@+id/iv_detail_photo"
            android:layout_width="224dp"
            android:layout_height="282dp"
            android:layout_gravity="center"
            android:src="@drawable/superman" />

        <TextView
            android:id="@+id/tv_data_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/name"
            android:textColor="@color/material_dynamic_tertiary10"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:textColorHighlight="@color/material_dynamic_neutral40"
            tools:text="data_name" />

        <TextView
            android:id="@+id/data_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/material_dynamic_neutral10"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/name"
            tools:text="@string/keterangan_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:textColor="@color/design_default_color_error"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="@string/keterangan_default" />

        <TextView
            android:id="@+id/tv_detail_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="238dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Artikel"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            tools:text="@string/keterangan_default" />
    </LinearLayout>
</ScrollView>